@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gray-500 bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
             
            </div>
            <div>

                <form method="post">
                    <h1 class="text-center"> Edit Category</h1>

                    <div class="mb-3 row">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" class="form-control" required />
                        @* asp-for sets the id , name and validation related attributes, *@
                        @* and it also sets the value of the input element if there is already a value within the model passed to the view *@
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                    <div class="row form-control">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                        <div class="text-end">
                            <a asp-controller="category" asp-action="index" class="btn btn-secondary">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
      </div>
  </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
