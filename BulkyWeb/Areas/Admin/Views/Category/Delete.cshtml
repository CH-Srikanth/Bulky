@model Category

<form method="post">
    <h1 class="text-center"> Delete Category</h1>

    <div class="mb-3 row">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" disabled class="form-control" required />
    </div>

    <div class="mb-3 row">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" disabled class="form-control" required />
        @* asp-for sets the id , name and validation related attributes, *@
        @* and it also sets the value of the input element if there is already a value within the model passed to the view *@
    </div>

    <div class="row form-control">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger" >Delete</button>
        </div>
        <div class="text-end">
            <a asp-controller="category" asp-action="index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>

