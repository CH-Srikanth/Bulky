@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gray-500 bg-gradient ml-0 py-3">
       <div class="row">
          <div class="col-12 text-center" >
              <h2 class="text-dark py-2">Create Category</h2>
          </div>

       </div>
        <div class="card-body p-4">
            <form method="post" class="row">

                <div class="form-floating mb-3 col-12">
                    <input asp-for="Name" class="form-control" required />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="DisplayOrder" class="form-control" required />
                    <label asp-for="DisplayOrder"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col text-end">
                        <a asp-controller="category" asp-action="index" class="btn btn-secondary">Back</a>
                    </div>
                </div>

            </form>
        </div>

   </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
